<Window x:Class="LLP.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LLP.UI"
        xmlns:vm="clr-namespace:LLP.UI.ViewModels"
        xmlns:services="clr-namespace:LLP.UI.Services"
        mc:Ignorable="d"
        Title="Local Log Processor" Height="800" Width="1200"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <services:LogLevelToColorConverter x:Key="LogLevelToColorConverter"/>
        <services:SelectedToVisibilityConverter x:Key="SelectedToVisibilityConverter"/>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Content="Open Log File" Command="{Binding OpenFileCommand}" Padding="10,5" Grid.Column="0"/>
            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Margin="10,0" Grid.Column="1" VerticalContentAlignment="Center">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                </TextBox.InputBindings>
            </TextBox>
            <Button Content="Search" Command="{Binding SearchCommand}" Padding="10,5" Grid.Column="2"/>
            <Button Content="Export" Command="{Binding ExportCommand}" Padding="10,5" Margin="5,0" Grid.Column="3"/>
            <CheckBox Content="Descending" IsChecked="{Binding IsDescending}" Margin="5,0" VerticalAlignment="Center" Grid.Column="4"/>
            <ToggleButton IsChecked="{Binding IsTailEnabled}" Padding="10,5" Grid.Column="5">
                <ToggleButton.Style>
                    <Style TargetType="ToggleButton">
                        <Setter Property="Content" Value="Tail: OFF"/>
                        <Style.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Content" Value="Tail: ON"/>
                                <Setter Property="Background" Value="LightGreen"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ToggleButton.Style>
            </ToggleButton>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="300" MinWidth="100"/>
            </Grid.ColumnDefinitions>

            <!-- Histogram Visualization -->
            <Border x:Name="HistogramContainer" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Background="#F0F0F0" Margin="5">
                <TextBlock Text="Histogram: Log counts over time" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>
            </Border>

            <GroupBox Header="Fields" Margin="5" Grid.Row="0" Grid.RowSpan="2" Grid.Column="0">
                <ItemsControl ItemsSource="{Binding Fields}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Name}" 
                                    Command="{Binding DataContext.ApplyFilterCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding Name, StringFormat='\{0\}:'}"
                                    HorizontalContentAlignment="Left"
                                    Margin="0,2"
                                    Background="Transparent"
                                    BorderThickness="0"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </GroupBox>

            <ListView x:Name="LogListBox" Grid.Row="1" Grid.Column="1" ItemsSource="{Binding LogLines}" 
                      SelectedItem="{Binding SelectedLogEntry}"
                      VirtualizingStackPanel.IsVirtualizing="True" VirtualizingStackPanel.VirtualizationMode="Recycling">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Timestamp" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Foreground="Gray" FontFamily="Consolas"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Level" Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Level}" FontWeight="Bold" FontFamily="Consolas"
                                               Foreground="{Binding Level, Converter={StaticResource LogLevelToColorConverter}}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Message" Width="600">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock FontFamily="Consolas"
                                               services:TextBlockExtensions.OriginalText="{Binding Message}"
                                               services:TextBlockExtensions.HighlightText="{Binding DataContext.SearchText, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <GridSplitter Grid.Row="1" Grid.Column="2" Width="5" HorizontalAlignment="Stretch" Background="LightGray"/>

            <GroupBox Header="Log Detail" Grid.Row="1" Grid.Column="3" Margin="5">
                <GroupBox.Style>
                    <Style TargetType="GroupBox">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedLogEntry, Converter={StaticResource SelectedToVisibilityConverter}}" Value="Visible">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </GroupBox.Style>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="5">
                        <TextBlock Text="Timestamp:" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding SelectedLogEntry.Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss.fff}'}" TextWrapping="Wrap"/>

                        <TextBlock Text="Level:" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding SelectedLogEntry.Level}" FontWeight="Bold" 
                                   Foreground="{Binding SelectedLogEntry.Level, Converter={StaticResource LogLevelToColorConverter}}"/>

                        <TextBlock Text="Message:" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBox Text="{Binding SelectedLogEntry.Message, Mode=OneWay}" IsReadOnly="True" TextWrapping="Wrap" BorderThickness="0" Background="Transparent"/>

                        <TextBlock Text="Fields:" FontWeight="Bold" Margin="0,10,0,5"/>
                        <ItemsControl ItemsSource="{Binding SelectedLogEntry.Fields}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" MinWidth="80"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Key, StringFormat='{}{0}:'}" FontWeight="SemiBold" Grid.Column="0" Margin="0,0,5,0"/>
                                        <TextBox Text="{Binding Value, Mode=OneWay}" IsReadOnly="True" TextWrapping="Wrap" Grid.Column="1" BorderThickness="0" Background="Transparent"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="Raw Content:" FontWeight="Bold" Margin="0,10,0,5"/>
                        <TextBox Text="{Binding SelectedLogEntry.RawContent, Mode=OneWay}" IsReadOnly="True" TextWrapping="Wrap" FontFamily="Consolas" FontSize="11" Background="#F8F8F8"/>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </Grid>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding LineCount, StringFormat='Lines: {0}'}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding FilePath}" FontStyle="Italic"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Loading... "/>
                    <ProgressBar Minimum="0" Maximum="100" Value="{Binding LoadingProgress}" Width="100" Height="15"/>
                    <TextBlock Text="{Binding LoadingProgress, StringFormat=' {0:F1}%'}" Margin="5,0"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem Visibility="{Binding IsIndexing, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Indexing... " Foreground="Blue"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
